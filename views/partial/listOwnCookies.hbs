<br><hr><br>
<h2 class="text-center mb-4">Lista Biscotti Creati da {{user}}</h2>
{{#each ownCookies}}
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.taste}}</p>
                <a class="btn btn-success btn-selfcreate" href="/create/update/{{this.id}}">Modifica Biscotto</a>
                <a class="btn btn-danger remove-btn btn-selfcreate" data-name="{{this.name}}" href="/create/delete/{{this.id}}">Elimina Biscotto</a>
            </div>
        </div>
    </div>
{{/each}}
